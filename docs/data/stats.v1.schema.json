{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Commander Tracker Stats v1",
  "type": "object",
  "required": [
    "version",
    "generated_utc",
    "counts",
    "filters",
    "by_player",
    "by_player_commander"
  ],
  "properties": {
    "version": {
      "const": "v1"
    },
    "generated_utc": {
      "type": "string",
      "description": "UTC timestamp in ISO-8601, ends with Z"
    },
    "counts": {
      "type": "object",
      "required": [
        "games",
        "entries"
      ],
      "properties": {
        "games": {
          "type": "integer",
          "minimum": 0
        },
        "entries": {
          "type": "integer",
          "minimum": 0
        }
      },
      "additionalProperties": false
    },
    "filters": {
      "type": "object",
      "required": [
        "players",
        "commanders",
        "brackets"
      ],
      "properties": {
        "players": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "commanders": {
          "type": "array",
          "items": {
            "type": "string"
          }
        },
        "brackets": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      },
      "additionalProperties": false
    },
    "by_player": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "player",
          "games",
          "wins"
        ],
        "properties": {
          "player": {
            "type": "string"
          },
          "games": {
            "type": "integer",
            "minimum": 0
          },
          "wins": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": false
      }
    },
    "by_player_commander": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "player",
          "commander",
          "bracket",
          "games",
          "wins"
        ],
        "properties": {
          "player": {
            "type": "string"
          },
          "commander": {
            "type": "string"
          },
          "bracket": {
            "type": [
              "string",
              "null"
            ]
          },
          "games": {
            "type": "integer",
            "minimum": 0
          },
          "wins": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": false
      }
    },
    "by_player_weighted": {
      "type": "array",
      "description": "Like by_player, but games/wins are weighted (float).",
      "items": {
        "type": "object",
        "required": ["player", "games", "wins"],
        "properties": {
          "player": { "type": "string" },
          "games": { "type": "number", "minimum": 0 },
          "wins": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "by_player_commander_weighted": {
      "type": "array",
      "description": "Like by_player_commander, but games/wins are weighted (float).",
      "items": {
        "type": "object",
        "required": ["player", "commander", "bracket", "games", "wins"],
        "properties": {
          "player": { "type": "string" },
          "commander": { "type": "string" },
          "bracket": { "type": ["string", "null"] },
          "games": { "type": "number", "minimum": 0 },
          "wins": { "type": "number", "minimum": 0 }
        },
        "additionalProperties": false
      }
    },
    "weighted": {
      "type": "object",
      "description": "Metadata about the weighting method used.",
      "required": ["method", "k", "w_min", "w_max"],
      "properties": {
        "method": { "type": "string" },
        "k": { "type": "number" },
        "w_min": { "type": "number" },
        "w_max": { "type": "number" }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}